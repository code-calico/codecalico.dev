---
import Layout from '../layouts/Layout.astro';
import Member from '../components/Member.astro';
import BlogPost from '../components/BlogPost.astro';
import Logo from '../components/Logo.astro';

const posts = Object.values(import.meta.glob('../pages/blog/*.md', {eager: true}));
const members = Object.values(import.meta.glob('../pages/members/*.md', {eager: true}));
---

<Layout title="Code Calico">
	<Logo />
	<main>
		<h2>Who are we?</h2>

		<p>Welcome to our website! We're a team of hobbyist programmers, working together to craft something fun.</p>

    {posts.length > 0 && (
		  <h2>What are we up to?</h2>
		  <div class="posts">
		  	{posts.sort((a, b) => a.frontmatter.pubDate > b.frontmatter.pubDate ? -1 : 1).slice(0, 3).map((post) =>
		  		<BlogPost url={post.url} {...post.frontmatter} />
		  	)}
		  </div>
    )}

		<h2>Who are we?</h2>
		<div class="members">
			{members.sort((a, b) => a.frontmatter.name > b.frontmatter.name ? 1 : -1).map((member) =>
				<Member {...member.frontmatter} content={member.compiledContent()} />
			)}
		</div>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1em;
		max-width: 1080px;
		font-size: 1.25rem;
		line-height: 1.6;
	}

	h1 {
		font-size: 3em;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}

	h2 {
		font-size: 2em;
		font-weight: 700;
		line-height: 1.5;
		text-align: center;
		margin-top: .5em;
	}

	.members {
		display: flex;
		flex-direction: row;
		align-items: stretch;
		justify-content: center;
		gap: 1em;
		flex-wrap: wrap;
	}

	.posts {
		display: flex;
		flex-direction: column;
		gap: 1em;
	}
</style>
