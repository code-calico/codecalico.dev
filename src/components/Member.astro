---
interface Props {
	github?: string;
	name?: string;
	content?: string;
}

const { name, image, url } = Astro.props;
---

<a href={`${url}`} class="member-card">
	<div class="avatar">
    <img src=`${image}` />
	</div>
	<div class="info">
		<span class="name">
			<span class="highlight">{name}</span>
		</span>
	</div>
</a>
<style>
	.member-card {
		display: flex;
		flex-direction: column;
		align-items: center;
		border-radius: 7px;
		border: 1px solid var(--node-border);
		background-color: var(--node-background);
		padding: 1em;
		gap: 1em;
		flex: 1;
		flex-basis: 300px;
	}

	.member-card .avatar {
		border-radius: 50%;
		overflow: hidden;
		flex: 1;
		display: flex;
		align-items: center;
		justify-content: center;
		min-width: fit-content;
	}

	.member-card .avatar img {
		width: 150px;
		height: 150px;
		object-fit: cover;
	}

	.member-card .info {
		width: 100%;
		text-align: center;
	}

	.member-card .info .name {
		margin: 0;
		font-size: 1.25em;
	}

	.member-card .info .highlight {
		font-weight: bold;
	}
</style>
